//operator aritmatika
<!DOCTYPE html>
<html>
<body>

<?php
$x = 10;  
$y = 6;

echo $x * $y;
?>  

</body>
</html>

//operator assigment
<!DOCTYPE html>
<html>
<body>
<?php
$x = 20;  
$x += 100;  //$x=$x+100;
echo $x;
?>  
</body>
</html>

//operator komparasi
<!DOCTYPE html>
<html>
<body>

<?php
$x = 100;  
$y = "100";

var_dump($x == $y); // returns true because values are equal
?>  

</body>
</html>

//increment
<!DOCTYPE html>
<html>
<body>

<?php
$x = 10;  
echo ++$x;
?>  

</body>
</html>

//logical
<!DOCTYPE html>
<html>
<body>

<?php
$x = 100;  
$y = 50;

if ($x == 100 and $y == 50) {
    echo "Hello world!";
}
?>  

</body>
</html>

//string
<!DOCTYPE html>
<html>
<body>

<?php
$txt1 = "Hello";
$txt2 = " world!";
$txt1 .= $txt2;  // $txt1=$txt1.$txt2
echo $txt1;
?>  

</body>
</html>

//array
<!DOCTYPE html>
<html>
<body>

<?php
$x = array("a" => "red", "b" => "green");  
$y = array("c" => "blue", "d" => "yellow");  

print_r($x + $y); // union of $x and $y
?>  

</body>
</html>
